# Environment Configuration for AI Features
# Copy this file to .env and fill in your actual values

# Google Cloud Vertex AI Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
VERTEX_AI_LOCATION=us-central1

# Database Configuration (adjust based on your database)
DATABASE_URL=your-database-connection-string
REDIS_URL=redis://localhost:6379/0

# AI Model Configuration
DEFAULT_MODEL=gemini-1.5-flash-001
MODEL_TEMPERATURE=0.7
MAX_TOKENS=2048

# Subscription Limits
FREE_TIER_DAILY_LIMIT=5
PREMIUM_TIER_DAILY_LIMIT=50
ENTERPRISE_TIER_DAILY_LIMIT=500

# Content Moderation Settings
MODERATION_THRESHOLD=7.0
AUTO_APPROVE_THRESHOLD=9.0
AUTO_REJECT_THRESHOLD=3.0

# Caching Configuration
CACHE_TTL_SECONDS=3600
USER_DATA_CACHE_SIZE=1000

# Platform Settings
PLATFORM_NAME="Egyptian Educational Platform"
SUPPORTED_LANGUAGES=["ar", "en"]
DEFAULT_TIMEZONE="Africa/Cairo"

# Security Settings
API_KEY_LENGTH=32
SESSION_TIMEOUT_MINUTES=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
